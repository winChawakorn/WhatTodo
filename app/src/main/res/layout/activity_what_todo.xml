<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context="com.winchawakorn.whattodo.WhatTodoActivity">


    <ImageView
        android:id="@+id/panda"
        android:layout_width="157dp"
        android:layout_height="115dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/panda" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="102dp"
        android:layout_height="90dp"
        android:layout_marginStart="260dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon" />

    <ImageView
        android:id="@+id/chatbox"
        android:layout_width="357dp"
        android:layout_height="166dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="140dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/chatbox" />

    <TextView
        android:id="@+id/what"
        android:layout_width="60dp"
        android:layout_height="33dp"
        android:layout_marginStart="240dp"
        android:layout_marginTop="105dp"
        android:text="WHAT"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/todo"
        android:layout_width="72dp"
        android:layout_height="28dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="105dp"
        android:text="TODO?"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/what"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/yes"
        android:layout_width="190dp"
        android:layout_height="155dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chatbox"
        app:srcCompat="@drawable/yes" />

    <ImageView
        android:id="@+id/no"
        android:layout_width="200dp"
        android:layout_height="155dp"
        android:layout_marginStart="189dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chatbox"
        app:srcCompat="@drawable/no" />

    <TextView
        android:id="@+id/yesText"
        android:layout_width="144dp"
        android:layout_height="85dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:onClick="onAccept"
        android:text="I agree!"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chatbox" />

    <TextView
        android:id="@+id/noText"
        android:layout_width="191dp"
        android:layout_height="85dp"
        android:layout_marginStart="190dp"
        android:layout_marginTop="18dp"
        android:gravity="center_vertical"
        android:onClick="onDecline"
        android:text="Nah,\n another idea?"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chatbox" />

    <TextView
        android:id="@+id/suggestion"
        android:layout_width="325dp"
        android:layout_height="83dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="200dp"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
